
<% page_name 'Countries' %>

<div class="main">
  <h2>Countries</h2>

  <div class="links">
    <%= link_to '[ new ]', {:action => 'new'}, {:class => 'admin'} %>
  </div>
  
  <table class="browse">
    <tr>
      <td class="header">
        &nbsp; id &nbsp;
      </td>
      <td class="header_order_by">
        name
      </td>
      <td class="header">
        image
      </td>
      <td class="header">
        &nbsp;
      </td>
      <td class="header">
        &nbsp;
      </td>
      <td class="header">
        &nbsp;
      </td>
    </tr>
    <% unless @countries.blank? %>
      <% @countries.each do |c| %>
        <tr>
          <td>
            <%= c.id %>
          </td>
          <td>
            <%= c.name %>
          </td>
          <td>
            <%= c.image %>
          </td>
          <td>
            <%= country_image c %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ edit ]', {:action => 'edit', :id => c}, {:class => 'admin'} %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ delete ]', {:action => 'destroy', :id => c}, {:method => :post, :class => 'admin', :confirm => 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          no countries found
        </td> 
      </tr>
    <% end %>
  </table>
</div>
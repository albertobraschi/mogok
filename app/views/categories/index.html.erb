
<% page_name 'Categories' %>

<div class="main">
  <h2>Categories</h2>

  <%= render :partial => 'misc/flash', :locals => {:flash => flash} %>

  <div class="links">
    <%= link_to '[ new ]', {:action => 'new'}, {:class => 'admin'} %>
  </div>
  
  <table class="browse">
    <tr>
      <td class="header">
        &nbsp; id &nbsp;
      </td>
      <td class="header">
        type
      </td>
      <td class="header">
        name
      </td>
      <td class="header_order_by">
        position
      </td>
      <td class="header">
        image
      </td>
      <td class="header">
        label
      </td>
      <td class="header">
        &nbsp;
      </td>
      <td class="header">
        &nbsp;
      </td>
    </tr>
    <% unless @categories.blank? %>
      <% @categories.each do |c| %>
        <tr>
          <td>
            <%= c.id %>
          </td>
          <td>
            <%= c.type.name %>
          </td>
          <td>
            <%= c.name %>
          </td>
          <td>
            <%= c.position %>
          </td>
          <td>
            <%= c.image %>
          </td>
          <td class="no_padding">
            <%= category_label c %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ edit ]', {:action => 'edit', :id => c}, {:class => 'admin'} %>
          </td>
          <td class="no_wrap">
            <%= link_to '[ delete ]', {:action => 'destroy', :id => c}, {:method => :post, :class => 'admin', :confirm => 'Are you sure?'} %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">
          no categories found
        </td> 
      </tr>
    <% end %>
  </table>
</div>
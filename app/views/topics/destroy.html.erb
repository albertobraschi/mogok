
<% page_name 'Forums' %>

<div class="main">
  <div class="forums">
    <div class="page_header"><%= link_to 'Forums', forums_path %></div>

    <div class="forum_name"><%= link_to @topic.forum.name, forums_path(:action => 'show', :id => @topic.forum) %></div>

    <h3>Topic Remotion</h3>
    
    <% form_tag :action => 'destroy' do %>
      <table class="details">
        <tr>
          <td class="label">
            title
          </td>
          <td>
            <%= @topic.title %>
          </td>
        </tr>
        <tr>
          <td class="label">
            body
          </td>
          <td>
            <div class="user_content">
              <%= to_html @topic.topic_post.body %>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="2" class="center">
            <ul class="buttons">
              <li><%= submit_tag 'Remove', :class => 'submit' %></li>
              <li><%= submit_tag 'Cancel', :name => 'cancel', :class => 'submit' %></li>
            </ul>
          </td>
        </tr>
      </table>
    <% end %>
  </div>
</div>





